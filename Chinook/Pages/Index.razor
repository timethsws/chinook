@page "/"
@attribute [Authorize]

@using Chinook.Models
@using Chinook.Services
@using Microsoft.EntityFrameworkCore
@using Chinook.DTOs

<PageTitle>Index</PageTitle>

<h1>Artists</h1>

@if (Artists == null)
{
    <Loading />
}
else
{
    <div class="input-group">
        <InputText @bind-Value="searchString" class="form-control" aria-label="Search"></InputText>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" @onclick="@(Search)" @onclick:preventDefault>
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </div>
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Artists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.AlbumsCount</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ArtistDto> Artists;
    [Inject] ArtistService ArtistService { get; set; }
    private string searchString;

    protected override async Task OnInitializedAsync() {
        await InvokeAsync(StateHasChanged);
        Artists = await ArtistService.GetAllAsync();
    }

    public async Task Search()
    {
        Artists = await ArtistService.GetAllAsync(searchString);
    }
}
